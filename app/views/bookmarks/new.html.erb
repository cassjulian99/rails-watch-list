<h1>Add a New Bookmark</h1>

<%= form_with model: @bookmark, url: list_bookmarks_path(@list), local: true do |f| %>
  <div class="form-group">
    <%= f.label :movie_id, "Select Movie", class: "form-label" %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Select a movie" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comment, "Add a Comment", class: "form-label" %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>

  <%= f.submit "Add Bookmark", class: "btn btn-primary mt-3" %>
<% end %>

<%= link_to "Back", list_path(@list), class: "btn btn-secondary mt-3" %>
