<h1>All Lists</h1>

<!-- Full background header -->
<div class="header-background">
  <div class="header-overlay">
    <h2>Save any kind of movies</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success mt-3" %>
  </div>
</div>

<!-- Movie list grid -->
<div class="list-container">
  <% @lists.each do |list| %>
    <div class="list-card">
      <% if list.image.attached? %>
        <%= image_tag list.image, alt: "Image for #{list.name}", class: "img-fluid mb-3" %>
      <% else %>
        <% if list.image.attached? %>
  <p>Image URL: <%= url_for(list.image) %></p>
<% else %>
  <p>No image attached</p>
<% end %>
      <% end %>
      <div class="card-body">
        <h3><%= list.name %></h3>
        <p>Description or extra info about the list can go here.</p>
        <%= link_to 'View', list_path(list), class: "btn btn-primary" %>

        <!-- Delete button -->
        <%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: "Are you sure you want to delete this list?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>

<!-- New list button -->
<%= link_to "Create a New List", new_list_path, class: "btn btn-success mt-3" %>
