<h1>Create a New List</h1>

<%= form_with model: @list, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "List Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url, class: "form-control" %>  <!-- Field for image_url -->
  </div>

  <%= f.submit "Create List", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to All Lists", lists_path, class: "btn btn-secondary" %>
